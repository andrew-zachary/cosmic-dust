---

const { currentCat, cats } = Astro.props;

import IconArrowDown from "../assets/icon-arrow-down.astro";

// components
import Modal from "./Modal.astro";

---
<script>

    const catLinksItem = document.querySelectorAll('.cat-links-item');
    const catLinksList = document.querySelector('#cat-links-list');
    
    catLinksItem.forEach( item => {

        if(catLinksList.getAttribute('data-selected-cat') === item.getAttribute('data-slug')) {
            item.classList.add('active-link');
        }

    });

</script>
<style lang="scss" is:global>

    #main-modal {

        ul {

            li.exclude {
                display: none;
            }
            
            li.active-link {

                a {
                    border-color: white;
                }
            }
        }

    }
</style>
<div x-data="{ open: false }" id="category-picker">

    <div id="category-picker-btn">

        <div class="inline-block border-2 border-black rounded-full cursor-pointer" @click="open = !open">

            <div class="flex items-center">
    
                <div class="px-4 text-cd-sm font-mont font-bold whitespace-nowrap capitalize">
                    { currentCat.name }
                </div>
                <div class="px-4 w-[3.5rem] h-[3rem]">
                    <IconArrowDown />
                </div>
    
            </div>

        </div>

    </div>

    <Modal>

        <div x-data="searchingCategories" class="w-full h-full flex flex-col">

            <div class="grow-0">

                <input @input="filterCategories" type="text" class="w-full p-4 text-cd-sm font-ssp" />

            </div>
    
            <div class="grow overflow-auto">
    
                <ul x-ref="cats" class="flex flex-col items-center justify-center" id="cat-links-list" data-selected-cat={ currentCat.slug }>
                    {
                        cats.map(cat => {
                            return <li class="cat-links-item mt-8 text-cd-md text-white font-ssp font-bold capitalize" data-slug={ cat.slug }>
                                <a href={ cat.url }>{ cat.name }</a>
                            </li>
                        })
                    }
                </ul>
    
            </div>

        </div>

    </Modal>

</div>